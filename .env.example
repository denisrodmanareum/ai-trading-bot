# Binance API Configuration
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here
BINANCE_TESTNET=true  # true for testnet, false for mainnet

# Database
DATABASE_URL=sqlite:///./trading.db

# AI Configuration
AI_MODEL_PATH=./data/models
AI_LEARNING_RATE=0.0003
AI_GAMMA=0.99
AI_BATCH_SIZE=64
AI_UPDATE_EPOCHS=10

# Trading Configuration
INITIAL_BALANCE=10000  # USDT
MAX_POSITION_SIZE=0.1  # 10% of balance
LEVERAGE=5
STOP_LOSS_PERCENT=2.0
TAKE_PROFIT_PERCENT=5.0

# Risk Management
MAX_DAILY_TRADES=20
MAX_LOSS_PER_DAY=100  # USDT
RISK_PER_TRADE=1.0  # % of balance

# WebSocket
WS_RECONNECT_DELAY=5

# FCM (Firebase Cloud Messaging) for Mobile Notifications
FCM_SERVER_KEY=your_fcm_server_key_here

# Redis (for caching and real-time data)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO
LOG_FILE=./data/logs/trading.log

# Server
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_URL=http://localhost:3000

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Session
SECRET_KEY=your-secret-key-change-this-in-production
